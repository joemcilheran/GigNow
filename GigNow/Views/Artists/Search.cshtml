@model IEnumerable<GigNow.Models.Artist>

@{
    ViewBag.Title = "Search";
}
@{ 
    Layout = null;
}

<h2>Search Artists</h2>


<div style="height: 250px">
    @using (Html.BeginForm())
    {
        <p>Search By:</p>
        <div>@Html.TextBox("artistCity")<text>  City</text></div>
        <div><p>And/Or</p></div>
        <div>@Html.TextBox("artistGenre")<text>  Genre</text></div>
        <br />
        <input type="submit" value="Search" class="btn btn-default"/>
    }
</div>

@if (Model.Count() > 0)
{

    <h2>Search Results</h2>
    <ul style="list-style-type:none">
        @foreach (var item in Model)
        {
            <li>
                @Html.ActionLink(item.Name, "ArtistView", "Artists", new { ArtistId = item.ArtistId, partial = "false" }, null)
            </li>
        }
    </ul>
}




