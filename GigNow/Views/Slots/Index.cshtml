@model IEnumerable<GigNow.Models.Slot>

@{
    ViewBag.Title = "Index";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Artist.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtistType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Length)
        </th>
        @if (ViewBag.User == "Gig Admin" || ViewBag.User == "Artist")
        {
            <th>
                @Html.DisplayNameFor(model => model.Compensation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perks)
            </th>

        }
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if(item.Artist == null)
        {
            <td>TBA</td>
        }
        else
        {
            <td>
                @Html.ActionLink(item.Artist.Name, "ArtistView","Artists", new {ArtistId = item.Artist.ArtistId})
            </td>
        }

        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArtistType)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Order)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Length)
        </td>
        @if (ViewBag.User == "Gig Admin" || ViewBag.User == "Arist")
        {
            <td>
                @Html.DisplayFor(modelItem => item.Perks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Compensation)
            </td>
        }

        @if (ViewBag.User == "Gig Admin")
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SlotId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SlotId })
            </td>
        }

    </tr>
}

</table>
